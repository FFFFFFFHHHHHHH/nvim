{
  "languageserver": {
  "clangd": {
    "command": "clangd",// "--clang-tidy"],
    "rootPatterns": ["compile_flags.txt", "compile_commands.json"],
    "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
    "arguments": ["--background-index", "--suggest-missing-includes", "--clang-tidy", "--completion-style=detailed"]
    }
  }
}
